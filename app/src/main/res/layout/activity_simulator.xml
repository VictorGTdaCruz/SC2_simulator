<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="victorcruz.sc2_simulator.MainSimulator">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.03">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/LarvaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="25sp"
                android:layout_below="@+id/chronometer"
                android:layout_toEndOf="@+id/chronometer"
                android:layout_marginStart="83dp"/>

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="startTime"
                android:textSize="50sp"/>

            <TextView
                android:id="@+id/MinTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:text="50"
                android:textSize="25sp"
                android:layout_alignBaseline="@+id/GasTextView"
                android:layout_alignBottom="@+id/GasTextView"
                android:layout_toStartOf="@+id/GasTextView"/>

            <TextView
                android:id="@+id/GasTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:text="0"
                android:textSize="25sp"
                android:layout_alignBaseline="@+id/SupplyTextView"
                android:layout_alignBottom="@+id/SupplyTextView"
                android:layout_toStartOf="@+id/SupplyTextView"/>

            <TextView
                android:id="@+id/SupplyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/SupplyMaxTextView"
                android:layout_alignBottom="@+id/SupplyMaxTextView"
                android:layout_toStartOf="@+id/BarTextView"
                android:text="12"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/BarTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="25sp"
                android:layout_alignBaseline="@+id/SupplyTextView"
                android:layout_alignBottom="@+id/SupplyTextView"
                android:layout_toStartOf="@+id/SupplyMaxTextView"/>

            <TextView
                android:id="@+id/SupplyMaxTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14"
                android:textSize="25sp"
                android:layout_alignBaseline="@+id/chronometer"
                android:layout_alignBottom="@+id/chronometer"
                android:layout_alignParentEnd="true"/>

            <GridLayout
                android:id="@+id/OptionsLayout"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="bottom"
                android:background="@android:color/darker_gray"
                android:columnCount="4"
                android:rowCount="4"
                android:visibility="visible">

                <Button
                    android:id="@+id/optButton11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    />

                <Button
                    android:id="@+id/optButton12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    />

                <Button
                    android:id="@+id/optButton13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:onClick="printQueue"
                    android:text="QUEUE"/>

                <Button
                    android:id="@+id/optButton14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:onClick="makeUnit"
                    android:text="+DRONE"/>

                <Button
                    android:id="@+id/optButton21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    />

                <Button
                    android:id="@+id/optButton22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    />

                <Button
                    android:id="@+id/optButton23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:onClick="makeUnit"
                    android:text="+ROACH"/>

                <Button
                    android:id="@+id/optButton24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:onClick="resetMatch"
                    android:text="RESET"/>

                <Button
                    android:id="@+id/optButton31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    />

                <Button
                    android:id="@+id/optButton32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:onClick="makeUnit"
                    android:text="+OVERL"/>

                <Button
                    android:id="@+id/optButton33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:onClick="makeUnit"
                    android:text="+LING"/>

                <Button
                    android:id="@+id/optButton34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:onClick="startTime"
                    android:text="START"/>

            </GridLayout>

        </RelativeLayout>

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation"/>

</LinearLayout>
